        p1:layout_below="@+id/blank3"
        p1:layout_toRightOf="@+id/conScoreNum"
        p1:id="@+id/conPlus" />
    <TextView
        p1:textAppearance="?android:attr/textAppearanceLarge"
        p1:layout_width="match_parent"
        p1:layout_height="17.5dp"
        p1:layout_below="@+id/conScore"
        p1:id="@+id/blank4"
        p1:visibility="invisible" />
    <TextView
        p1:text="INT"
        p1:textAppearance="?android:attr/textAppearanceLarge"
        p1:layout_width="49.0dp"
        p1:layout_height="wrap_content"
        p1:layout_below="@+id/blank4"
        p1:id="@+id/intScore" />
    <Button
        p1:text="-"
        p1:layout_width="49.0dp"
        p1:layout_height="31.5dp"
        p1:layout_below="@+id/blank4"
        p1:layout_toRightOf="@+id/intScore"
        p1:id="@+id/intMinus" />
    <TextView
        p1:text="8"
        p1:textAppearance="?android:attr/textAppearanceLarge"
        p1:layout_width="28.0dp"
        p1:layout_height="wrap_content"
        p1:gravity="center"
        p1:layout_toRightOf="@+id/intMinus"
        p1:layout_below="@+id/blank4"
        p1:id="@+id/intScoreNum" />
    <Button
        p1:text="+"
        p1:layout_width="49.0dp"
        p1:layout_height="31.5dp"
        p1:layout_below="@+id/blank4"
        p1:layout_toRightOf="@+id/intScoreNum"
        p1:id="@+id/intPlus" />
    <TextView
        p1:textAppearance="?android:attr/textAppearanceLarge"
        p1:layout_width="match_parent"
        p1:layout_height="17.5dp"
        p1:layout_below="@+id/intScore"
        p1:id="@+id/blank5"
        p1:visibility="invisible" />
    <TextView
        p1:text="WIS"
        p1:textAppearance="?android:attr/textAppearanceLarge"
        p1:layout_width="49.0dp"
        p1:layout_height="wrap_content"
        p1:layout_below="@+id/blank5"
        p1:id="@+id/wisScore" />
    <Button
        p1:text="-"
        p1:layout_width="49.0dp"
        p1:layout_height="31.5dp"
        p1:layout_below="@+id/blank5"
        p1:layout_toRightOf="@+id/wisScore"
        p1:id="@+id/wisMinus" />
    <TextView
        p1:text="8"
        p1:textAppearance="?android:attr/textAppearanceLarge"
        p1:layout_width="28.0dp"
        p1:layout_height="wrap_content"
        p1:gravity="center"
        p1:layout_toRightOf="@+id/wisMinus"
        p1:layout_below="@+id/blank5"
        p1:id="@+id/wisScoreNum" />
    <Button
        p1:text="+"
        p1:layout_width="49.0dp"
        p1:layout_height="31.5dp"
        p1:layout_below="@+id/blank5"
        p1:layout_toRightOf="@+id/wisScoreNum"
        p1:id="@+id/wisPlus" />
    <TextView
        p1:textAppearance="?android:attr/textAppearanceLarge"
        p1:layout_width="match_parent"
        p1:layout_height="17.5dp"
        p1:layout_below="@+id/wisScore"
        p1:id="@+id/blank6"
        p1:visibility="invisible" />
    <TextView
        p1:text="CHA"
        p1:textAppearance="?android:attr/textAppearanceLarge"
        p1:layout_width="49.0dp"
        p1:layout_height="wrap_content"
        p1:layout_below="@+id/blank6"
        p1:id="@+id/chaScore" />
    <Button
        p1:text="-"
        p1:layout_width="49.0dp"
        p1:layout_height="31.5dp"
        p1:layout_below="@+id/blank6"
        p1:layout_toRightOf="@+id/chaScore"
        p1:id="@+id/chaMinus" />
    <TextView
        p1:text="8"
        p1:textAppearance="?android:attr/textAppearanceLarge"
        p1:layout_width="28.0dp"
        p1:layout_height="wrap_content"
        p1:gravity="center"
        p1:layout_toRightOf="@+id/chaMinus"
        p1:layout_below="@+id/blank6"
        p1:id="@+id/chaScoreNum" />
    <Button
        p1:text="+"
        p1:layout_width="49.0dp"
        p1:layout_height="31.5dp"
        p1:layout_below="@+id/blank6"
        p1:layout_toRightOf="@+id/chaScoreNum"
        p1:id="@+id/chaPlus" />
    <TextView
        p1:textAppearance="?android:attr/textAppearanceLarge"
        p1:layout_height="wrap_content"
        p1:layout_width="match_parent"
        p1:gravity="center"
        p1:layout_below="@+id/chaScore"
        p1:id="@+id/raceLabel" />
    <TextView
        p1:text="Remaining Points: 27"
        p1:textAppearance="?android:attr/textAppearanceLarge"
        p1:layout_width="match_parent"
        p1:layout_height="wrap_content"
        p1:layout_below="@+id/raceLabel"
        p1:id="@+id/remPoints"
        p1:textColor="@android:color/holo_blue_light" />
    <TextView
        p1:textAppearance="?android:attr/textAppearanceLarge"
        p1:layout_width="match_parent"
        p1:layout_height="29.0dp"
        p1:layout_below="@+id/remPoints"
        p1:id="@+id/errMsg"
        p1:visibility="invisible"
        p1:textColor="@android:color/holo_red_dark" />
    <Button
        p1:text="Continue"
        p1:layout_width="match_parent"
        p1:layout_height="wrap_content"
        p1:layout_below="@+id/errMsg"
        p1:id="@+id/continueBtn" />
</RelativeLayout>