<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:p1="http://schemas.android.com/apk/res/android"
    p1:minWidth="25px"
    p1:minHeight="25px"
    p1:layout_width="match_parent"
    p1:layout_height="match_parent"
    p1:id="@+id/relativeLayout1">
    <TextView
        p1:text="Lets Generate Ability Scores!"
        p1:textAppearance="?android:attr/textAppearanceMedium"
        p1:layout_width="match_parent"
        p1:layout_height="wrap_content"
        p1:id="@+id/instructionAb1"
        p1:textAlignment="center" />
    <TextView
        p1:text="You will have 27 points to spend to generate six scores for your character.  The scores are as follows: Strength, Dexterity, Constitution, Intelligence, Wisdom, and Charisma.  Keep in mind, the scores you choose will be modified by the race you have chosen."
        p1:textAppearance="?android:attr/textAppearanceSmall"
        p1:layout_width="match_parent"
        p1:layout_height="wrap_content"
        p1:layout_below="@id/instructionAb1"
        p1:id="@+id/instructionAb2" />
    <TextView
        p1:textAppearance="?android:attr/textAppearanceLarge"
        p1:layout_width="match_parent"
        p1:layout_height="13.0dp"
        p1:layout_below="@+id/instructionAb2"
        p1:id="@+id/blank1"
        p1:visibility="invisible" />
    <TextView
        p1:text="STR"
        p1:textAppearance="?android:attr/textAppearanceLarge"
        p1:layout_width="49.0dp"
        p1:layout_height="wrap_content"
        p1:layout_below="@+id/blank1"
        p1:id="@+id/strScore" />
    <Button
        p1:text="-"
        p1:layout_width="49.0dp"
        p1:layout_height="31.5dp"
        p1:layout_below="@+id/blank1"
        p1:layout_toRightOf="@+id/strScore"
        p1:id="@+id/strMinus" />
    <TextView
        p1:text="8"
        p1:textAppearance="?android:attr/textAppearanceLarge"
        p1:layout_width="28.0dp"
        p1:layout_height="wrap_content"
        p1:gravity="center"
        p1:layout_toRightOf="@+id/strMinus"
        p1:layout_below="@+id/blank1"
        p1:id="@+id/strScoreNum" />
    <Button
        p1:text="+"
        p1:layout_width="49.0dp"
        p1:layout_height="31.5dp"
        p1:layout_below="@+id/blank1"
        p1:layout_toRightOf="@+id/strScoreNum"
        p1:id="@+id/strPlus" />
    <TextView
        p1:textAppearance="?android:attr/textAppearanceLarge"
        p1:layout_width="match_parent"
        p1:layout_height="17.5dp"
        p1:layout_below="@+id/strScore"
        p1:id="@+id/blank2"
        p1:visibility="invisible" />
    <TextView
        p1:text="DEX"
        p1:textAppearance="?android:attr/textAppearanceLarge"
        p1:layout_width="49.0dp"
        p1:layout_height="wrap_content"
        p1:layout_below="@+id/blank2"
        p1:id="@+id/dexScore" />
    <Button
        p1:text="-"
        p1:layout_width="49.0dp"
        p1:layout_height="31.5dp"
        p1:layout_below="@+id/blank2"
        p1:layout_toRightOf="@+id/dexScore"
        p1:id="@+id/dexMinus" />
    <TextView
        p1:text="8"
        p1:textAppearance="?android:attr/textAppearanceLarge"
        p1:layout_width="28.0dp"
        p1:layout_height="wrap_content"
        p1:gravity="center"
        p1:layout_toRightOf="@+id/dexMinus"
        p1:layout_below="@+id/blank2"
        p1:id="@+id/dexScoreNum" />
    <Button
        p1:text="+"
        p1:layout_width="49.0dp"
        p1:layout_height="31.5dp"
        p1:layout_below="@+id/blank2"
        p1:layout_toRightOf="@+id/dexScoreNum"
        p1:id="@+id/dexPlus" />
    <TextView
        p1:textAppearance="?android:attr/textAppearanceLarge"
        p1:layout_width="match_parent"
        p1:layout_height="17.5dp"
        p1:layout_below="@+id/dexScore"
        p1:id="@+id/blank3"
        p1:visibility="invisible" />
    <TextView
        p1:text="CON"
        p1:textAppearance="?android:attr/textAppearanceLarge"
        p1:layout_width="49.0dp"
        p1:layout_height="wrap_content"
        p1:layout_below="@+id/blank3"
        p1:id="@+id/conScore" />
    <Button
        p1:text="-"
        p1:layout_width="49.0dp"
        p1:layout_height="31.5dp"
        p1:layout_below="@+id/blank3"
        p1:layout_toRightOf="@+id/conScore"
        p1:id="@+id/conMinus" />
    <TextView
        p1:text="8"
        p1:textAppearance="?android:attr/textAppearanceLarge"
        p1:layout_width="28.0dp"
        p1:layout_height="wrap_content"
        p1:gravity="center"
        p1:layout_toRightOf="@+id/conMinus"
        p1:layout_below="@+id/blank3"
        p1:id="@+id/conScoreNum" />
    <Button
        p1:text="+"
